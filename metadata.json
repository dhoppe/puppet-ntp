{
  "name": "dhoppe-ntp",
  "version": "1.0.0",
  "author": "Dennis Hoppe",
  "summary": "This module installs, configures and manages the NTP service.",
  "license": "Apache 2.0",
  "source": "git://github.com/dhoppe/puppet-ntp",
  "project_page": "https://github.com/dhoppe/puppet-ntp",
  "issues_url": "https://github.com/dhoppe/puppet-ntp/issues",
  "dependencies": [
    {
      "name": "puppetlabs-stdlib",
      "version_requirement": ">= 1.0.0"
    }
  ],
  "operatingsystem_support": [
